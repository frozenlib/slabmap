{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "cargo test",
      "command": "cargo",
      "args": ["test"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "clear": true
      },
      "options": {
        "env": {
          // "RUST_BACKTRACE": "1",
          "PROPTEST_CASES": "10000",
          "PROPTEST_MAX_GLOBAL_REJECTS": "10000",
          "PROPTEST_MAX_LOCAL_REJECTS": "200000",
          "PROPTEST_MAX_SHRINK_ITERS": "1000000"
        }
      }
    },
    {
      "type": "shell",
      "label": "cargo test xx",
      "command": "cargo",
      "args": ["test", "test_xx"],
      "problemMatcher": ["$rustc"],
      "presentation": {
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "cargo build",
      "command": "cargo",
      "args": ["build"],
      "problemMatcher": ["$rustc"],
      "presentation": {
        "panel": "dedicated",
        "clear": true
      },
      "options": {
        "env": {
          "RUST_BACKTRACE": "1"
        }
      }
    },
    {
      "type": "shell",
      "label": "cargo bench",
      "command": "cargo",
      "args": ["bench"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "cargo bench update baseline",
      "command": "cargo",
      "args": ["bench", "--", "--save-baseline", "saved-base"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "cargo doc open",
      "command": "cargo",
      "args": ["doc", "--open", "--no-deps", "--all-features"],
      "problemMatcher": ["$rustc"],
      "presentation": {
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
